  "paths": {
    "/api/users/": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Create user",
        "description": "This can only be done by the logged in user.",
        "operationId": "createUser",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Created user object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation."
          },
          "400": {
            "description": "Invalid username/password supplied."
          },
          "409": {
            "description": "Username already exists."
          },
          "422": {
            "description": "Missing Arguments."
          },
          "500": {
            "description": "Database Problem."
          }
        }
      },
      "put": {
        "tags": [
          "user"
        ],
        "summary": "Modify user",
        "description": "This can only be done by the logged in user.",
        "operationId": "modifyUser",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Created user object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation."
          },
          "400": {
            "description": "Invalid username/password supplied."
          },
          "409": {
            "description": "Username already exists."
          },
          "422": {
            "description": "Missing Arguments."
          },
          "500": {
            "description": "Database Problem."
          }
        }
      }
    },
    "/api/users/role/{login}": {
      "patch": {
        "tags": [
          "user"
        ],
        "summary": "Set roles of an user",
        "description": "",
        "operationId": "setRoleUser",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "login",
            "in": "path",
            "description": "The user name for login",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "The added and deleted roles",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Roles"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid username/password supplied"
          },
          "422": {
            "description": "Missing Arguments."
          },
          "500": {
            "description": "Database Problem."
          }
        }
      }
    },
    "/api/users/token": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Logs user into the system",
        "description": "",
        "operationId": "loginUser",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "login",
            "in": "query",
            "description": "The user name for login",
            "required": true,
            "type": "string"
          },
          {
            "name": "password",
            "in": "query",
            "description": "The password for login in clear text",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid username/password supplied"
          },
          "422": {
            "description": "Missing Arguments."
          },
          "500": {
            "description": "Database Problem."
          }
        }
      }
    },
